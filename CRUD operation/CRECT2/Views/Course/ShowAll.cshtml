    <symbol id="check-circle-fill" fill="currentcolor" viewbox="0 0 16 16">
        <path d="m16 8a8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022l7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06l6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
    </symbol>
    <symbol id="info-fill" fill="currentcolor" viewbox="0 0 16 16">
        <path d="m8 16a8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zm8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
    </symbol>
    <symbol id="exclamation-triangle-fill" fill="currentcolor" viewbox="0 0 16 16">
        <path d="m8.982 1.566a1.13 1.13 0 0 0-1.96 0l.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767l8.982 1.566zm8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0l7.1 5.995a.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>

@if (TempData["ADD"] != null)
{


    <div class="alert alert-success d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="success:"><use xlink:href="#check-circle-fill" /></svg>
        <div>
            <h2>the item @TempData["ADD"] is added in the system</h2>
        </div>
    </div>
}

@if (TempData["Edite"] != null)
{
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
        <div>
            <h2>the item @TempData["Edite"] is updated in the system</h2>
        </div>
    </div>
}

@if (TempData["Delete"] != null)
{
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
        <div>
            <h2>the item @TempData["Delete"] was deleted from the system</h2>
        </div>
    </div>
}

<h1>Show Course</h1>
<table class="table table-active table-bordered">
    <a class="btn btn-success col-lg-12" asp-controller="Course" asp-action="AddItem">Add</a>

    <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Degree</th>
    <th>Min_Degree</th>
    
    <th>Employees</th>
    <th>option</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Degree</td>
                <td>@item.Min_Degree</td>
            
                <td>
                    <table class="table table-light">
                        <thead>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Salary</th>
                        <th>Department</th>
                        <th>Course</th>
                        <th>img</th>
                        </thead>
                        <tbody>
                            @foreach (var emp in item.Employees)
                            {
                                <tr>
                                    <td>@emp.ID</td>
                                    <td>@emp.Name</td>
                                    <td>@emp.Address</td>
                                    <td>@emp.Salary</td>
                                    <td>@emp.Department.Name</td>
                                    <td>@emp.Course.Name</td>
                                    <td><img src="~/image/@emp.Image" style="width:120px; height:50px" alt="isalm" /></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
                <td>
                    <a class="btn btn-primary col-5 " asp-controller="Course" asp-action="UpdateItem" asp-route-ID="@item.ID">Edite </a>
                    <a class="btn btn-danger col-5" asp-controller="Course" asp-action="DeleteItem" asp-route-ID="@item.ID">Delete </a>

                </td>
            </tr>
        }
    </tbody>
</table>