@{
    ViewBag.titel = "Create page";
}
@model Employee 


<form method="post" asp-action="AddItem" asp-controller="Employee">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
    <label asp-for="@Model.Name">Name</label>
    <input asp-for="@Model.Name" class="form-control" />
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Salary">Salary</label>
        <input asp-for="@Model.Salary" class="form-control" />
        <span asp-validation-for="@Model.Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Address">Address</label>
        <input asp-for="@Model.Address" class="form-control" />
        <span asp-validation-for="@Model.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CourseId">Course</label>
        <select asp-for="@Model.CourseId" class="form-control" asp-items="@ViewBag.ListCrs" ></select>
        <span asp-validation-for="@Model.CourseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Image">Image</label>
        <input asp-for="@Model.Image" class="form-control" />
        <span asp-validation-for="@Model.Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.DeptId">Department</label>
        <select asp-for="@Model.DeptId" class="form-control" asp-items="@ViewBag.ListDept"></select>
        <span asp-validation-for="@Model.DeptId" class="text-danger"></span>
    </div>
   <input type="submit" class="btn btn-primary" value="Save" />
</form>
